class Main {
    public static void main(String[] args) {
        pattern(5);
    }
    static void pattern(int n){
        for(int i=1;i<=n;i++){
            for(int j=1;j<=n-i;j++){
                System.out.print(" ");
            }
            for(int s=1;s<=2*i-1;s++){
                System.out.print("*");
            }
            System.out.println("");
        }
        
    }
}



