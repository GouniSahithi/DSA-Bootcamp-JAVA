import java.util.Scanner;

class Main{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        System.out.println("enter a number:");
        int n=sc.nextInt();
        System.out.println(sum(n));
    }
    static int sum(int n){
        if(n<=1){
            return 1;
        }
        return n+sum(n-1);
        
    }
}

o/p:
enter a number:
4
10
